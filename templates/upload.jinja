    <main class="hero d-flex justify-content-around" style="background: url('{{ url_for('static', path='/images/background_image.jpg') }}')">
        <div>
            <header class="row animate__animated animate__fadeIn mb-5">
                <div class="col-12">
                    <h1 class="text-center mt-5 text-light gentium-book-plus-bold">Ebook Image Extractor</h1>
                    <h5 class="text-center text-light gentium-book-plus-regular">Extract images from epub files</h5>
                </div>
            </header>
            
            <hr class="mb-5 opacity-0">

            <div class="row animate__animated animate__fadeIn">
                
                <p class="select-an-epub text-center text-light gentium-book-plus-regular-italic">Select an EPUB file</p>
                
                <form
                    action="{{ url_for('extract_image_from_book') }}"
                    method="post"
                    enctype="multipart/form-data"
                    class="d-flex flex-column align-items-center justify-content-center"
                >
                <label class="upload-btn btn btn-success col-6 text-center" for="formFile">
                    <span class="epub-file-name text-light font-weight-bold gentium-book-plus-regular-italic">Browse...</span> 
                    <input type="file" style="display: none;" id="formFile" name="epub_file" accept=".epub">
                </label>

                <button type="submit" class="submit-button btn btn-success gentium-book-plus-regular mt-3 col-6 d-none">Enviar</button>
            </div>
        </div>
